    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dirkster.ColorPickerLib" Version="1.6.2" />
    <PackageReference Include="Hid.Net" Version="4.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
